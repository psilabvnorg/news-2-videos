# TikTok News Video Generator Configuration

# Language (vietnamese or english)
LANGUAGE=vietnamese

# TTS Model Path (optional, leave empty to use edge-tts)
TTS_MODEL_PATH=

# Output directories
OUTPUT_DIR=output
VIDEO_DIR=output/videos
AUDIO_DIR=output/audio
IMAGE_DIR=output/images
TEMP_DIR=output/temp

# Video settings
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_BITRATE=6000k

# TikTok API (optional - for auto-upload)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# YouTube API (optional - for auto-upload)
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
